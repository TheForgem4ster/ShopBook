@model DataLayer.Model.LoginModel
<center>
    <h1>Welcome to the book site</h1>
</center>


<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <div class="form-group">
            <label asp-for="Email" class="form-label display-6">Enter Email</label>
            <input type="text" asp-for="Email" class="form-control" aria-describedby="emailHelp" />
            <span asp-validation-for="Email" />
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="form-group display-6">
            <label asp-for="Password" class="form-label">Enter password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <br><button type="submit" class="btn btn-primary">Sign In</button>
        @*<div class="form-group">
            <input type="submit" value="Sign In" class="btn btn-outline-dark" />
        </div>*@
    </div>
</form>

<div>
    <a asp-action="Register" asp-controller="Account">I have an account</a>
</div>